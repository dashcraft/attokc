extends ../layouts/default

block content
  .row
    .twelve.columns.jumbotron
      form.main-form
        .row
          .offset-by-two.eight.columns
            h2.form-heading.center-content
              | Contact Us To 
              span.highlighted Start
              |  Today
          // twelve columns
          .offset-by-one.ten.columns.center-content
            input#nameInput(type='text', placeholder='First & Last Name')
          .offset-by-one.ten.columns.center-content
            input#emailInput(type='email', placeholder='Email')
          .offset-by-one.ten.columns.center-content
            input#phoneInput(type='tel', placeholder='Phone Number')
          .offset-by-one.ten.columns.center-content
            input.button(type='submit', value='START TRAINING TODAY')
        // End of row
    // End of jumbotron
  // End of row
  .container
    .row.intro
      .twelve.columns.intro-heading
        h3.center-content American Top Team OKC
      // End of intro-heading
      .twelve.columns.intro-content
        p.center-content
          | American Top Team in Oklahoma City is the Premier MMA training facility used by mixed martial arts, brazilian jiujitsu competitors and other sports athletes alike! Come Join Us Today and see what all the fuss is about
      // End of intro-content
      .twelve.columns.intro-button
        a.button(href='#') Join Now
      // End of intro-button
    // End of intro
    .row.social
      .twelve.columns.social-heading
        h3.center-content Check Us Out On Social Media!
      // End of social-heading
      .twelve.columns.social-buttons
        ul.no-list-1
          li
            a(href='#')
              img(src='images/facebook-icon.svg')
          li
            a(href='#')
              img(src='images/twitter-icon.svg')
          li
            a(href='#')
              img(src='images/instagram-icon.svg')
      // End of social-buttons
      .twelve.columns.social-works
        .row
          .twelve.columns.recent-works
            h4.center-content.social-works-heading Recent Works
          // End of recent-works
          .twelve.columns.social-frames
            div#instafeed
        // End of row
      // End of social-works
    // End of social
  // End of container

